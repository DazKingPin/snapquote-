{
  "name": "snapquote",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=snapquote-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name snapquote",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name snapquote",
    "db:migrate:local": "wrangler d1 migrations apply snapquote-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply snapquote-db",
    "db:seed": "wrangler d1 execute snapquote-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute snapquote-db --local",
    "db:console:prod": "wrangler d1 execute snapquote-db",
    "test": "curl http://localhost:3000",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "hono": "^4.9.4",
    "@hono/zod-validator": "^0.4.0",
    "zod": "^3.23.0",
    "stripe": "^17.5.0",
    "openai": "^4.73.0",
    "uuid": "^10.0.0",
    "date-fns": "^3.6.0",
    "twilio": "^5.4.0"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@cloudflare/workers-types": "^4.20250705.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0",
    "typescript": "^5.0.0"
  }
}